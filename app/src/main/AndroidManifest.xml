<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.linkedin.android.learning_android_accessibility">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:label="Accessibility Examples">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/login_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.TabLayoutActivity"
            android:label="@string/tab_layout_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.SingleActivity"
            android:label="@string/single_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.CardsActivity"
            android:label="@string/cards_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.CustomViewActivity"
            android:label="@string/custom_view_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.ChartsActivity"
            android:label="@string/charts_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linkedin.android.learning_android_accessibility.activities.MainActivity"/>
        </activity>
    </application>

</manifest>